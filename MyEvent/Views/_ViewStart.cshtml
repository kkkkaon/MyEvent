@using Microsoft.AspNetCore.Http

@{
    Layout = "_Layout";

    //5.3.1
    if (Context.Request.RouteValues["controller"]?.ToString() == "Members" || Context.Request.RouteValues["controller"]?.ToString() == "EventHolders"
    || Context.Request.RouteValues["controller"]?.ToString() == "ManageOrders")
    {
        Layout = "_AdminLayout";
    }
    else if (Context.Request.RouteValues["controller"]?.ToString() == "Events" || Context.Request.RouteValues["controller"]?.ToString() == "EHLogin")
    {
        Layout = "_EHLayout";
    }
    else if (Context.Request.RouteValues["controller"]?.ToString() == "MemberLogin"){
        Layout = "_MemberLayout";
    }
}
