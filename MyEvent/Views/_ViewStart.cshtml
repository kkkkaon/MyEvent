@using Microsoft.AspNetCore.Http

@{
    Layout = "_Layout";

    //5.3.1
    if (Context.Request.RouteValues["controller"]?.ToString() == "Members" || Context.Request.RouteValues["controller"]?.ToString() == "LoginsManage")
    {
        Layout = "_AdminLayout";

        //5.3.5
        if (Context.Session.GetString("Member") == null)
        {
            Context.Response.Redirect("/Home/Index");
        }
    }

    
}
