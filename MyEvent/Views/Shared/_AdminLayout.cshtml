@{
    var role = ViewContext.HttpContext.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyEvent</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* bs icon的CDN放在bs之下 *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyModel_CodeFirst.styles.css" asp-append-version="true" />
</head>
<style>
    .navbar-dark {
        background-color: black;
        color: lightgray;
    }

    .navbar-light{
        background-color: #099;
    }


</style>
<body>
    <div class="d-flex flex-column min-vh-100" style="@ViewData["BrowseBackground"]">
        <header class="row">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm @(ViewBag.IsDarkbg == true ? "navbar-dark" : "navbar-light") border-bottom box-shadow mb-3" style="@ViewData["BrowseBackground"]">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between col-11">
                    <ul class="navbar-nav flex-grow-1 container">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Browse" asp-action="Index">瀏覽演出</a>
                        </li>

                        @if (role == "3")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Members" asp-action="Index">平台帳號管理</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-1">
                    <a asp-action="Index" asp-controller="MemberLogin" class="text-light"><i class="bi bi-person-circle fs-3"></i></a>
                </div>
            </nav>
        </header>

        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted @(ViewBag.IsDarkbg == true ? "navbar-dark" : "")">
            <div class="container">
                &copy; @DateTime.Now.Year - MyEvent - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
