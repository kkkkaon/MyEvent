			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Price)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Price)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Discount)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Discount)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Note)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Note)
			</dd>
		</dl>
	</div>
	<form asp-action="Delete" class="mt-3 align-items-center d-flex justify-content-center">
		<input type="hidden" asp-for="EventID" />
		<input type="submit" value="確認刪除" class="btn btn-primary" />
		<a asp-action="Index" asp-controller="EHLogin" class="btn btn-outline-primary ms-2">返回列表</a>
	</form>
</div>
